<!---TITLE NAVBAR HEADER-->
<% if user_signed_in? %>
  <%=render partial:"shared/userin_main_nav"%>
<%else %>
  <%=render partial: "shared/navbar_setup"%>
<%end%>

<!--MAIN-->
<%=render partial: "shared/main_start" %>
<section class = "colleges_course_reviews-page">
  <h2>
    <%= @course.name %> | <%= @course.college.name %>
  </h2>

  <div class = "basic_container reviews_in_course_container" >
    <div class = "course_reviews_header">
      <h4>
        Reviews | <%=@course.name%>
      </h4>
      <%=link_to "Add Review", new_course_review_path(@course), class:"btn btn-block add-review_btn" %>
    </div>


    <% @course.reviews.each do | review | %>
    <div class="basic_container reviews_container">
      <%= review.semester %>
      <%= review.year %>
      <%= review.rating %>
      <%= review.summary%>
      <%= review.user.email%>
    </div>
    <%end%>

  </div>

</section>

<!--FOOTER-->
<%=render partial: "shared/main_end" %>
<%=render partial: "shared/footer" %>