<%=render partial: "shared/navbar_setup" %>
<%=render partial: "shared/main_start" %>
<section class = "forgot_password">
  <form class ="form forgot_password-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form_row">
      <h3>
        Forgot Your Password?
      </h3>
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-label", class:"form-input", autofocus: true, autocomplete: "email" %>
    </div>
      <hr size="8" width="100%" color="FFFFFFFF">
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:'btn btn-block' %>
    </div>
  <% end %>
    <%= render "devise/shared/links" %>
  </form>
</section>
<%=render partial: "shared/main_end" %>
<%=render partial: "shared/footer" %>