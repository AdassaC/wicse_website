<%=render partial: "shared/navbar_setup" %>
<%=render partial: "shared/main_start" %>
<section class = "login">
  <form class ="form login_form">
    <!--PROMPT USER FOR EMAIL-->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-row">
      <h3>
        Hello, again!
      </h3>
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-input", autofocus: true, autocomplete: "email" %>
    </div>

      <!--PROMPT USER FOR PASSWORD-->
      <div class="field form-row">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"form-input", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:'btn btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </form>
</section>
<%=render partial: "shared/main_end" %>
<%=render partial: "shared/footer" %>